/*
  Variables
*/

blue = #2993fc
yellow = #f8b02a
red = #fd5e60
orange = #fd8b34
white = #ffffff
offwhite = #fafafa
lightgrey  = #EDEEED

@import url(https://fonts.googleapis.com/css?family=Nunito)

html
  font-size 12px
  font-family sans-serif

body
  font-family Nunito

.tac
  text-align center
.tar
  text-align right
.tal
  text-align left
.block
  display block
.inline
  display inline

p
  font-size 1.6rem
  line-height 1.5
  color white

h1
  font-family Futura
  text-transform uppercase
  font-weight 600
  text-align center
  font-weight 100
  font-size 4rem
  margin 2rem 0
  letter-spacing -1px
  // text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  a
    color white
    text-decoration none
    &:focus
      outline 0

h2
   font-size 2.5em
   padding 0 1em
